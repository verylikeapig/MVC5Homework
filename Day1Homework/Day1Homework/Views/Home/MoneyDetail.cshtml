
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td> @(i++) </td>
                        <td> @item.Category </td>
                        <td> @item.RecordDate.ToString("yyyy-MM-dd") </td>
                        <td> @item.Amount.ToString("###,###") </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
